+int sock_send(int sockid, unsigned char *buf, int bytes)
+{
+	int cnt;
+	unsigned char* bufpos = buf;
+	while (bytes) {
+		cnt = write(sockid, bufpos, bytes);
+		if (cnt != bytes)
+			printf("cnt:%d,bytes:%d\n",cnt, bytes);
+
+		if (!cnt) {
+			break;
+		}
+		if (cnt == -1) {
+			if (errno == EINTR) {
+				continue;
+			} else {
+				return -1;
+			}
+		}
+
+		bytes -= cnt;
+		bufpos += cnt;
+	}
+	return (bufpos - buf);
+}
