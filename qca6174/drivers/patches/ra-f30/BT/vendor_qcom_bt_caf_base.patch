+        break;
+      }
+    case INTEROP_BL_TYPE_SSR_MAX_LAT:
+      {
+        interop_hid_ssr_max_lat_t *src = &entry->entry_type.ssr_max_lat_entry;
+
+        interop_feature_t feature = src->feature;
+        char m_vendor[KEY_MAX_LENGTH] = { '\0' };
