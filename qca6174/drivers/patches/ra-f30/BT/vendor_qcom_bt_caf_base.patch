+    return;
+  }
+
+  // add it to the config file as well
+  switch (db_entry->bl_type) {
+    case INTEROP_BL_TYPE_ADDR:
+      {
+        interop_feature_t feature =
+              db_entry->entry_type.addr_entry.feature;
+        bdstr_t bdstr = { '\0' };
