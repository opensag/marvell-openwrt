+		loc_byte[0] = patch_loc[0];
+		loc_byte[1] = patch_loc[1];
+		loc_ptr[j] = strtol(loc_byte, NULL, 16);
+		patch_loc += 2;
+	}
+
+	err = send_hci_cmd_sync(dev, cmd, SET_PATCH_RAM_CMD_SIZE, &event);
+	if (err < 0 || !event){
+		if(event) free(event);
+		event = NULL;
+		return err;
+	}
+
+	err = read_ps_event(event, HCI_PS_CMD_OCF);
+
+	free(event);
+	event = NULL;
