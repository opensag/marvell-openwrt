+int sock_recv(int sockid, unsigned char *buf, int buflen)
+{
+	int recvbytes;
+	recvbytes = recv(sockid, buf, buflen, 0);
+	if (recvbytes == 0) {
+		printf("Connection close!? zero bytes received\n");
+		return -1;
+	} else if (recvbytes > 0) {
+		return recvbytes;
+	}
+	return -1;
+}
