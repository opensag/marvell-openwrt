+        strlcpy(&log_list->tail->log_str[log_list->saved_log_len], buff,
+            log_list->pending_pkt_len + 1);
+        ret = log_list->pending_pkt_len;
+        log_list->pending_pkt_len = 0;
+    }
+    return ret;
+}
