+				printf("Connection up\n");
+			} else {
+				printf("Connection failed\n");
+			}
+			hci_handle = (buf[4] | (buf[5] << 8)) & 0x0EFF;
+			// EVT_DISCONN_COMPLETE 0x05
+		} else if (buf[1] == 0x05) {
+			UINT16 hdl = buf[4] | (buf[5] << 8);
